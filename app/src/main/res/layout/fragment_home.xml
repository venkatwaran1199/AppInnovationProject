<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.Home">


        <EditText
            android:id="@+id/edtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter your age"
            app:layout_constraintEnd_toEndOf="@+id/edtname"
            app:layout_constraintStart_toStartOf="@+id/edtname"
            app:layout_constraintTop_toBottomOf="@+id/edtname" />

        <EditText
            android:id="@+id/edtgender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Gender"
            app:layout_constraintEnd_toEndOf="@+id/edtage"
            app:layout_constraintStart_toStartOf="@+id/edtage"
            app:layout_constraintTop_toBottomOf="@+id/edtage" />

        <EditText
            android:id="@+id/edtlanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Known languages"
            app:layout_constraintEnd_toEndOf="@+id/edtgender"
            app:layout_constraintStart_toStartOf="@+id/edtgender"
            app:layout_constraintTop_toBottomOf="@+id/edtgender" />

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Save"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="@+id/edtlanguages"
            app:layout_constraintTop_toBottomOf="@+id/edtlanguages"
            app:layout_constraintEnd_toStartOf="@+id/btnApi"/>

        <Button
            android:id="@+id/btnApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Api"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@+id/edtlanguages"
            app:layout_constraintStart_toEndOf="@+id/btnsave"
            app:layout_constraintTop_toBottomOf="@+id/edtlanguages" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>